<!DOCTYPE html>
<html>
  <head>
  <style>
table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  text-align: left;
  padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2}
</style>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>



  <table>
    <tr>
      <th>Character</th>
      <th>Trait</th>
        </tr>
        <% for(var key in users) { %>
        <tr>
        <td> <%= users[key].name %> </td>
        <td> <%= users[key].trait %></td>
        <td>
          <form class="form1" action="/game_of_thrones/<%= users[key]._id %>" method="get">
          <button class="btn1">Info</button>
          </form>
        </td>
        <td>
          <form class="form2" action="/game_of_thrones/<%= users[key]._id %>/edit" method="post">
            <button class="btn2">Edit</button>
          </form>
        </td>
        <td>
          <form class="form3" action="/game_of_thrones/<%= users[key]._id %>/delete" method="post">
            <button class="btn3">Delete</button>
          </form>
        </td>
    </tr>
    <% } %>
  </table>

<form class="form" action="/users" method="post">
      Game of thrones character: <input id="name" type='text' name="name"><br/>
      Main trait:<input id="trait" type='text' name="trait" ><br/>
      <button class="btn">submit</button>
</form>
  </body>
</html>
